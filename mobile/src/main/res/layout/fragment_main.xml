<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <com.github.zeng1990java.widget.WaveProgressView
        android:id="@+id/wave_progress_view"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        app:waveAmplitude="4dp"
        app:waveBorderRadius="2dp"
        app:waveBorderWidth="3dp"
        app:waveColor="#3498db"
        app:waveMax="100" />

    <TextClock
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text_Clock"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wave_progress_view"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/AppTheme.Button"
        android:id="@+id/temp_timer_wash_button"
        android:layout_below="@+id/section_label"
        android:text="Wash Start"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/AppTheme.Button"
        android:id="@+id/temp_timer_dry_button"
        android:layout_below="@+id/section_label"
        android:layout_toRightOf="@id/temp_timer_wash_button"
        android:layout_toEndOf="@id/temp_timer_wash_button"
        android:text="Dry Start"
        />

    <android.support.v7.widget.AppCompatButton
        style="@style/AppTheme.Button"
        android:id="@+id/temp_timer_reset_button"
        android:layout_below="@+id/section_label"
        android:layout_toRightOf="@id/temp_timer_dry_button"
        android:layout_toEndOf="@id/temp_timer_wash_button"
        android:text="Stop"/>

</RelativeLayout>
