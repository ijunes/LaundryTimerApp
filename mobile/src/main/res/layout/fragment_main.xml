<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.github.zeng1990java.widget.WaveProgressView
        android:id="@+id/wave_progress_view"
        android:layout_width="@dimen/waveLayoutWidth"
        android:layout_height="@dimen/waveLayoutHeight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/waveLayoutMarginBottom"
        app:waveAmplitude="@dimen/waveAmplitude"
        app:waveBorderRadius="@dimen/waveBorderRadius"
        app:waveBorderWidth="@dimen/waveBorderWidth"
        app:waveColor="@color/colorAccent"
        app:waveMax="100" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tempTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wave_progress_view" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/tempTimerWashButton"
        style="@style/AppTheme.Button"
        android:layout_below="@+id/tempTextView"
        android:text="Wash" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/tempTimerDryButton"
        style="@style/AppTheme.Button"
        android:layout_below="@+id/tempTextView"
        android:visibility="invisible"
        android:text="Dry" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/tempTimerResetButton"
        style="@style/AppTheme.Button"
        android:layout_below="@+id/tempTextView"
        android:visibility="invisible"
        android:text="Stop" />

</RelativeLayout>
